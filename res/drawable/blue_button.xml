<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff39afef"/>
            <stroke
                android:width="1dp"
                android:color="#ff4c8a99"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ff7695c8"
                android:endColor="#ff328c99"
                android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color="#ff3b5099"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp"/>
        </shape>
    </item>
</selector>